#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[100];
    int i = 0, start = 0, wordCount = 0;

    printf("Enter a full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline character if present
    name[strcspn(name, "\n")] = '\0';

    printf("Formatted name: ");

    // Traverse the string
    while (name[i] != '\0') {
        // Skip leading spaces
        while (name[i] == ' ') i++;

        start = i;

        // Find end of current word
        while (name[i] != ' ' && name[i] != '\0') i++;

        wordCount++;

        // If it's not the last word, print initial
        if (name[i] != '\0') {
            printf("%c. ", toupper(name[start]));
        } else {
            // Last word (surname), print in full
            while (start < i) {
                printf("%c", name[start]);
                start++;
            }
        }
    }

    printf("\n");
    return 0;
}
