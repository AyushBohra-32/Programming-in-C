#include <stdio.h>
#include <math.h> 
int areCollinear(double x1, double y1, double x2, double y2, double x3, double y3) {
    if ((x2 - x1 == 0) && (x3 - x2 == 0)) {
        return 1; 
    }
    double slope1, slope2;
    double epsilon = 0.00001; 
    if (x2 - x1 == 0) { 
        slope1 = INFINITY;
    } else {
        slope1 = (y2 - y1) / (x2 - x1);
    }
    if (x3 - x2 == 0) { 
        slope2 = INFINITY; 
    } else {
        slope2 = (y3 - y2) / (x3 - x2);
    }
    return fabs(slope1 - slope2) < epsilon;
}
int main() {
    double x1, y1, x2, y2, x3, y3;
    printf("Enter coordinates for point 1 (X1 Y1): ");
    scanf("%lf %lf", &x1, &y1);
    printf("Enter coordinates for point 2 (X2 Y2): ");
    scanf("%lf %lf", &x2, &y2);
    printf("Enter coordinates for point 3 (X3 Y3): ");
    scanf("%lf %lf", &x3, &y3);
    if (areCollinear(x1, y1, x2, y2, x3, y3)) {
        printf("The three points are collinear.\n");
    } else {
        printf("The three points are not collinear.\n");
    }
    return 0;
}
